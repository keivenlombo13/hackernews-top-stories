<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keiven.hackernewtopstory">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.keiven.hackernewtopstory.ui.storydetail.StoryDetailActivity"
            android:label="@string/title_activity_story_detail"
            android:parentActivityName="com.keiven.hackernewtopstory.ui.topstory.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.keiven.hackernewtopstory.ui.topstory.MainActivity" />
        </activity>
        <activity
            android:name="com.keiven.hackernewtopstory.ui.topstory.MainActivity"
            android:exported="true"
            android:label="@string/title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>